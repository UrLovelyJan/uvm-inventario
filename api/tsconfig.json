{
  "compilerOptions": {
    /* Configuración básica para Node.js */
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ES2020"
    ],
    "moduleResolution": "node",
    /* Habilitar ES modules (tu package.json tiene "type": "module") */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    /* Migración gradual JS → TS */
    "allowJs": true,
    "checkJs": false,
    /* Output y rutas */
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    /* Compatibilidad y validaciones */
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    /* Strictness - nivel medio para facilitar migración */
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    /* Configuración adicional para Node.js */
    "sourceMap": true,
    "declaration": false,
    "removeComments": true
  },
  "include": [
    "**/*.js",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}